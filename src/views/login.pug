extends base
block content 
    if(errorMessage)
            small=errorMessage
    form(method="post") 
        input(name="username", placeholder="Username", type="text", required)
        input(name="password", placeholder="Passoword", type="password", required)
        input(type="submit", value="Login")
        include partials/social-login.pug
        div.auth-switch 
            span Don't have an account? 
            a(href="/join") Join now &rarr; 