extends base
block content 
    if(errorMessage)
        small=errorMessage
    form(method="post") 
        input(name="email", placeholder="Email", type="email", required)
        input(name="username", placeholder="Username", type="text", required)
        input(name="password", placeholder="Passoword", type="password", required)
        input(name="password2", placeholder="Check passoword", type="password", required)
        input(name="name", placeholder="Name", type="text" required)
        input(name="location", placeholder="Location", type="text", required)
        input(type="submit", value="Join")
        include partials/social-login.pug
        div.auth-switch
            span Already have an account? 
            a(href="/login") Log in now &rarr; 